<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Outer ring (darker when pressed) -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#60FFFFFF" />
                    <size android:width="96dp" android:height="96dp" />
                </shape>
            </item>
            
            <!-- Middle ring (slightly gray when pressed) -->
            <item android:top="6dp" android:bottom="6dp" android:left="6dp" android:right="6dp">
                <shape android:shape="oval">
                    <solid android:color="#E0E0E0" />
                </shape>
            </item>
            
            <!-- Inner circle (darker when pressed) -->
            <item android:top="12dp" android:bottom="12dp" android:left="12dp" android:right="12dp">
                <shape android:shape="oval">
                    <solid android:color="#D0D0D0" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal state -->
    <item>
        <layer-list>
            <!-- Outer ring (semi-transparent white) -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#80FFFFFF" />
                    <size android:width="96dp" android:height="96dp" />
                </shape>
            </item>
            
            <!-- Middle ring (white) -->
            <item android:top="6dp" android:bottom="6dp" android:left="6dp" android:right="6dp">
                <shape android:shape="oval">
                    <solid android:color="#FFFFFF" />
                </shape>
            </item>
            
            <!-- Inner circle (light gray) -->
            <item android:top="12dp" android:bottom="12dp" android:left="12dp" android:right="12dp">
                <shape android:shape="oval">
                    <solid android:color="#F0F0F0" />
                </shape>
            </item>
        </layer-list>
    </item>
    
</selector>